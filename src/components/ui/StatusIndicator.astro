---
interface Props {
  active?: boolean;
  pulse?: boolean;
}

const { active = true, pulse = true } = Astro.props;
---
<div class="flex items-center gap-2">
  <div class="relative">
    <div class={`w-2 h-2 rounded-full transition-colors duration-300 
      ${active ? 'bg-secondary' : 'bg-gray-600'} 
      ${pulse && active ? 'animate-pulse' : ''}`}
    ></div>
    <div class={`absolute inset-0 rounded-full bg-secondary/30 animate-ping ${active && pulse ? 'opacity-75' : 'opacity-0'}`}></div>
  </div>
  <slot />
</div>