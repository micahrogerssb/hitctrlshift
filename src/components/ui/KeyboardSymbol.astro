---
interface Props {
  symbol: 'ctrl' | 'shift';
}

const { symbol } = Astro.props;

const symbols = {
  ctrl: '⌃',
  shift: '⇧'
};
---
<span class="font-mono text-punk-red/80">{symbols[symbol]}</span>
</boltArtifact>

