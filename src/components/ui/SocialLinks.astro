---
import { socialLinks } from '../../data/socials';
---

<div class="flex flex-col items-center gap-4">
  <h2 class="text-xl font-sans font-black text-white tracking-tight">Follow Our Socials</h2>
  <div class="flex justify-center items-center gap-8">
    {socialLinks.map(link => (
      <a
        href={link.url}
        target="_blank"
        rel="noopener noreferrer"
        class="text-white/70 hover:text-secondary transition-all duration-300 hover:-translate-y-0.5 group"
        aria-label={`Follow us on ${link.name}`}
      >
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-br from-primary/20 to-secondary/20 blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <div class="relative">
            <Fragment set:html={link.icon} />
          </div>
        </div>
      </a>
    ))}
  </div>
</div>