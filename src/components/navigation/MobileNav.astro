---
import { navItems } from '../../data/navigation';
---

<nav class="sm:hidden">
  <ul class="flex items-center gap-1">
    {navItems.map(item => (
      <li>
        <a 
          href={item.href}
          class="px-2 py-1.5 text-xs text-white/70 hover:text-white transition-colors duration-300"
        >
          {item.label}
        </a>
      </li>
    ))}
  </ul>
</nav>