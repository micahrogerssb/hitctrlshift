---
import ParallaxHero from '../ParallaxHero.astro';
import FadeInScale from '../animations/FadeInScale.astro';
import FullscreenReveal from '../animations/FullscreenReveal.astro';
import HeroImage from './HeroImage.astro';

const isMobile = Astro.request.headers.get('user-agent')?.match(
  /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i
);
---

<FullscreenReveal initialDelay={isMobile ? 0 : 100} duration={1500}>
  <section class="flex items-center justify-center -mt-8">
    <div class="w-full px-4">
      <FadeInScale delay={isMobile ? 300 : 500} duration={1500}>
        <div class="text-center relative">
          {/* Add color accents */}
          <div class="absolute inset-0 -z-10">
            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[120%] h-[120%] bg-primary/5 blur-3xl rounded-full"></div>
            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[120%] h-[120%] bg-secondary/5 blur-3xl rounded-full transform rotate-45"></div>
          </div>
          <HeroImage />
        </div>
      </FadeInScale>
    </div>
  </section>
</FullscreenReveal>