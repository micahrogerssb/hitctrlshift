---
import FadeInScale from '../animations/FadeInScale.astro';
import MissionHeading from './MissionHeading.astro';
import MissionText from './MissionText.astro';
---

<section class="max-w-3xl mx-auto px-4">
  <FadeInScale delay={1200} duration={1500}>
    <div class="relative">
      <div class="absolute inset-0 bg-gradient-to-r from-primary/5 via-transparent to-secondary/5 blur-3xl"></div>
      <div class="relative">
        <div class="h-px w-24 bg-gradient-to-r from-primary/50 to-transparent mb-12"></div>
        <div class="text-center">
          <MissionHeading />
          <MissionText />
        </div>
        <div class="h-px w-24 bg-gradient-to-l from-secondary/50 to-transparent mt-12 ml-auto"></div>
      </div>
    </div>
  </FadeInScale>
</section>