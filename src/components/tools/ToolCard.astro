---
interface Props {
  name: string;
  description: string;
  href: string;
  icon: string;
}

const { name, description, href, icon } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="group relative bg-black/20 backdrop-blur-sm p-6 rounded-lg border border-white/10 transition-all duration-300 hover:bg-black/30 hover:border-white/20"
>
  <div class="absolute inset-0 bg-gradient-to-r from-primary/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-lg"></div>
  <div class="relative flex gap-4">
    <div class="flex-shrink-0 w-10 h-10 rounded-full bg-white/5 flex items-center justify-center text-white/40 group-hover:text-white/60 transition-colors duration-300">
      <Fragment set:html={icon} />
    </div>
    <div>
      <h3 class="font-sans font-black text-lg text-white/90 group-hover:text-white transition-colors duration-300 mb-2">
        {name}
      </h3>
      <p class="text-sm text-white/60 line-clamp-2">
        {description}
      </p>
    </div>
  </div>
</a>