---
import SearchBar from './SearchBar.astro';
import SearchResults from './SearchResults.astro';
import { articles } from '../../data/articles';
---

<div 
  id="search-dialog"
  class="fixed inset-0 z-[100] flex items-start justify-center opacity-0 pointer-events-none"
  role="dialog"
  aria-modal="true"
  aria-labelledby="search-title"
>
  <div class="fixed inset-0 bg-black/80 backdrop-blur-xl transition-opacity duration-300"></div>
  
  <div class="relative w-full max-w-2xl mt-[15vh] mx-4">
    <div class="bg-black/40 backdrop-blur-md rounded-2xl border border-white/10 shadow-2xl">
      <div class="p-4">
        <h2 id="search-title" class="sr-only">Search articles</h2>
        <SearchBar showShortcut={false} />
        
        <div id="search-results" class="mt-4 max-h-[60vh] overflow-y-auto">
          <SearchResults articles={[]} searchTerm="" />
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  import { SearchManager } from './SearchManager';
  new SearchManager();
</script>