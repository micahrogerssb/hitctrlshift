<a href="/" class="group relative inline-flex items-center">
  <span class="font-display text-4xl text-white font-black tracking-[-0.08em] transition-all duration-300 group-hover:opacity-90 glitch" data-text="CTRLSHIFT">
    CTRLSHIFT
  </span>
</a>

<style>
  @font-face {
    font-family: 'Display';
    src: local('Helvetica Neue Black'),
         local('Helvetica Black'),
         local('Arial Black');
    font-weight: 900;
    font-style: normal;
    font-display: swap;
  }

  .font-display {
    font-family: 'Display', system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
    -webkit-font-smoothing: antialiased;
    text-rendering: geometricPrecision;
    letter-spacing: -0.08em;
    font-feature-settings: "ss01", "ss02";
    font-synthesis: none;
  }

  .glitch {
    position: relative;
  }

  @media (prefers-reduced-motion: no-preference) {
    .glitch::before,
    .glitch::after {
      content: attr(data-text);
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      opacity: 0.8;
    }

    .glitch::before {
      animation: glitch-effect 3s infinite linear alternate-reverse;
      color: #ff2e4c;
      z-index: -1;
    }

    .glitch::after {
      animation: glitch-effect 2s infinite linear alternate-reverse;
      color: #37C6F4;
      z-index: -2;
    }
  }

  @keyframes glitch-effect {
    0% {
      clip-path: inset(71% 0 10% 0);
      transform: translate(-2px, 2px);
    }
    5% {
      clip-path: inset(24% 0 61% 0);
      transform: translate(2px, -2px);
    }
    10% {
      clip-path: inset(54% 0 31% 0);
      transform: translate(-1px, 1px);
    }
    15% {
      clip-path: inset(90% 0 5% 0);
      transform: translate(1px, -1px);
    }
    20% {
      clip-path: inset(35% 0 50% 0);
      transform: translate(-2px, 2px);
    }
    25% {
      clip-path: inset(80% 0 5% 0);
      transform: translate(2px, -2px);
    }
    30% {
      clip-path: inset(15% 0 70% 0);
      transform: translate(-1px, 1px);
    }
    35% {
      clip-path: inset(65% 0 20% 0);
      transform: translate(1px, -1px);
    }
    40% {
      clip-path: inset(40% 0 45% 0);
      transform: translate(-2px, 2px);
    }
    45% {
      clip-path: inset(85% 0 10% 0);
      transform: translate(2px, -2px);
    }
    50% {
      clip-path: inset(30% 0 55% 0);
      transform: translate(-1px, 1px);
    }
    55% {
      clip-path: inset(75% 0 15% 0);
      transform: translate(1px, -1px);
    }
    60% {
      clip-path: inset(20% 0 65% 0);
      transform: translate(-2px, 2px);
    }
    65% {
      clip-path: inset(95% 0 5% 0);
      transform: translate(2px, -2px);
    }
    70% {
      clip-path: inset(45% 0 40% 0);
      transform: translate(-1px, 1px);
    }
    75% {
      clip-path: inset(70% 0 25% 0);
      transform: translate(1px, -1px);
    }
    80% {
      clip-path: inset(25% 0 60% 0);
      transform: translate(-2px, 2px);
    }
    85% {
      clip-path: inset(85% 0 10% 0);
      transform: translate(2px, -2px);
    }
    90% {
      clip-path: inset(50% 0 35% 0);
      transform: translate(-1px, 1px);
    }
    95% {
      clip-path: inset(15% 0 80% 0);
      transform: translate(1px, -1px);
    }
    100% {
      clip-path: inset(60% 0 25% 0);
      transform: translate(-2px, 2px);
    }
  }

  @media (max-width: 768px) {
    .glitch::before,
    .glitch::after {
      display: none;
    }
  }
</style>