---
import Layout from '../../layouts/Layout.astro';
import PageSpacer from '../../components/ui/PageSpacer.astro';
import ArticleHeaderLogo from '../../components/ArticleHeaderLogo.astro';
---

<Layout title="Custom Brochures">
  <PageSpacer />
  <div class="max-w-4xl mx-auto px-4">
    <ArticleHeaderLogo />
    
    <div class="relative bg-black/30 backdrop-blur-sm p-8 rounded-lg border border-white/10">
      <div class="text-center">
        <h1 class="text-3xl font-sans font-black text-white/90 mb-4">Custom Brochures</h1>
        <p class="text-lg text-white/70 font-serif">Tool in progress, check back later!</p>
      </div>
    </div>
  </div>
</Layout>